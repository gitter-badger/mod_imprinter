    <description><![CDATA[
        <div style="font-weight:normal; text-align: left;">
            <h4>Imprint Module for legal information spiced with microdata and microformat 2 [h-card].
            <small style="float:right">ver. 0.0.6</small></h4>
            <p><strong>Imprinter</strong> module. Put Imprinter on any page.</p>
            <p>Need information? Please visit the <a href="http://interim-webmanagement.net/projekte/imprinter" target="_blank">Imprinter Info Page</a>. You'll find there all the information you need.</p>
            <p>Like the Imprinter? Check out the <a style="font-weight:bold;" href="http://interim-webmanagement.net/projekte/clifflex" target="_blank">CLIFFlex Template</a></p>
        </div>
    ]]></description>

    <scriptfile>install.php</scriptfile>

    <files>
        <filename module="mod_imprinter">mod_imprinter.php</filename>
        <folder>assets</folder>
        <folder>language</folder>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_imprinter.xml</filename>
        <filename>install.php</filename>
    </files>

    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_FOOTER" />

    <config>
        <fields name="params">
            <!-- Module Tab -->
            <fieldset name="basic">
                <field name="spacer_loadmodule" type="spacer"
                       label="MOD_IMPRINTER_FIELD_BASICINFORMATION_LABEL" />

                <!--
                <field type="spacer" hr="true" />

                <field name="catid" type="category" extension="com_example" required="true" multiple="true" size="10" default="1"
                       label="JGLOBAL_CHOOSE_CATEGORY_LABEL" description="JGLOBAL_CHOOSE_CATEGORY_DESC">
                    <option value="1">JALL</option>
                </field>

                <field type="spacer" hr="true" />

                <field name="orderby" type="list" default="a.created"
                       label="JGLOBAL_ARTICLE_ORDER_LABEL" description="JGLOBAL_ARTICLE_ORDER_DESC">
                    <option value="a.created">JGLOBAL_CREATED_DATE</option>
                    <option value="a.publish_up">MOD_IMPRINTER_PUBLISH_UP</option>
                    <option value="a.publish_down">MOD_IMPRINTER_PUBLISH_DOWN</option>
                    <option value="a.modified">JGLOBAL_FIELD_MODIFIED_LABEL</option>
                    <option value="a.title">JGLOBAL_TITLE</option>
                    <option value="a.ordering">JGLOBAL_ORDERING</option>
                </field>

                <field name="order_dir" type="list" default="DESC"
                       label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC">
                    <option value="ASC">MOD_IMPRINTER_ORDER_DIR_ASC</option>
                    <option value="DESC">MOD_IMPRINTER_ORDER_DIR_DESC</option>
                </field>
                -->
            </fieldset>

            <!-- Imprint Tab -->
            <fieldset name="imprint">
                <field name="companyname" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_COMPANYNAME_LABEL" description="MOD_IMPRINTER_FIELD_COMPANYNAME_DESC"
                       filter="string" />

                <field name="companyservice" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_COMPANYSERVICE_LABEL" description="MOD_IMPRINTER_FIELD_COMPANYSERVICE_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="firstname" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_FIRSTNAME_LABEL" description="MOD_IMPRINTER_FIELD_FIRSTNAME_DESC"
                       filter="string" />

                <field name="secondname" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_SECONDNAME_LABEL" description="MOD_IMPRINTER_FIELD_SECONDNAME_DESC"
                       filter="string" />

                <field name="lastname" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_LASTNAME_LABEL" description="MOD_IMPRINTER_FIELD_LASTNAME_DESC"
                       filter="string" />

                <field name="authorurl" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_AUTHORURL_LABEL" description="MOD_IMPRINTER_FIELD_AUTHORURL_DESC"
                       filter="string" />

                <field name="nameurl" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_NAMEURL_LABEL" description="MOD_IMPRINTER_FIELD_NAMEURL_DESC"
                       filter="string" />
                <field name="nameurltitle" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_NAMEURLTITLE_LABEL" description="MOD_IMPRINTER_FIELD_NAMEURLTITLE_DESC"
                       filter="string" />

                <field name="jobtitle" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_JOBTITLE_LABEL" description="MOD_IMPRINTER_FIELD_JOBTITLE_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="start_business" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_BUSINESSSTART_LABEL" description="MOD_IMPRINTER_FIELD_BUSINESSSTART_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="vatid" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_VATID_LABEL" description="MOD_IMPRINTER_FIELD_VATID_DESC"
                       filter="string" />

                <field name="spacer_name_1" type="spacer" label="MOD_IMPRINTER_SPACER_1" />
            </fieldset>

            <!-- Contact Tab -->
            <fieldset name="contact">

                <field name="telephone" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_TELEPHONE_LABEL" description="MOD_IMPRINTER_FIELD_TELEPHONE_DESC"
                       filter="string" />
                <field name="telephonecall" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="MOD_IMPRINTER_FIELD_TELEPHONECALL_LABEL" description="MOD_IMPRINTER_FIELD_TELEPHONECALL_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>

                <field type="spacer" hr="true" />

                <field name="telefax" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_TELEFAX_LABEL" description="MOD_IMPRINTER_FIELD_TELEFAX_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="mobilephone" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_MOBILEPHONE_LABEL" description="MOD_IMPRINTER_FIELD_MOBILEPHONE_DESC"
                       filter="string" />
                <field name="mobilephonecall" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="MOD_IMPRINTER_FIELD_MOBILEPHONECALL_LABEL" description="MOD_IMPRINTER_FIELD_MOBILEPHONECALL_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>
                <field name="mobilephonesms" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="MOD_IMPRINTER_FIELD_MOBILEPHONESMS_LABEL" description="MOD_IMPRINTER_FIELD_MOBILEPHONESMS_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>

                <field type="spacer" hr="true" />

                <field name="email" type="text" class="validate-email" default=""
                       label="MOD_IMPRINTER_FIELD_EMAIL_LABEL" description="MOD_IMPRINTER_FIELD_EMAIL_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="url" type="text" class="validate-url" default=""
                       label="MOD_IMPRINTER_FIELD_URL_LABEL" description="MOD_IMPRINTER_FIELD_URL_DESC"
                       filter="string" />

                <field name="spacer_name_2" type="spacer" label="MOD_IMPRINTER_SPACER_2" />
            </fieldset>

            <!-- Location Tab -->
            <fieldset name="location">

                <field name="street" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_STREET_LABEL" description="MOD_IMPRINTER_FIELD_STREET_DESC"
                       filter="string" />

                <field name="postalcode" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_POSTALCODE_LABEL" description="MOD_IMPRINTER_FIELD_POSTALCODE_DESC"
                       filter="string" />

                <field name="city" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_CITY_LABEL" description="MOD_IMPRINTER_FIELD_CITY_DESC"
                       filter="string" />

                <field name="region" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_REGION_LABEL" description="MOD_IMPRINTER_FIELD_REGION_DESC"
                       filter="string" />

                <field name="country" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_COUNTRY_LABEL" description="MOD_IMPRINTER_FIELD_COUNTRY_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field type="spacer" name="geoinfo" class="text"
                       label="MOD_IMPRINTER_GEOINFO_LABEL" description="MOD_IMPRINTER_GEOINFO_DESC" />

                <field name="georegion" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_GEOREGION_LABEL" description="MOD_IMPRINTER_FIELD_GEOREGION_DESC"
                       filter="string" />

                <field name="geoplacename" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_GEOPLACENAME_LABEL" description="MOD_IMPRINTER_FIELD_GEOPLACENAME_DESC"
                       filter="string" />

                <field name="geolatitude" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_GEOLATITUDE_LABEL" description="MOD_IMPRINTER_FIELD_GEOLATITUDE_DESC"
                       filter="string" />

                <field name="geolongitude" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_GEOLONGITUDE_LABEL" description="MOD_IMPRINTER_FIELD_GEOLONGITUDE_DESC"
                       filter="string" />

                <field name="spacer_name_3" type="spacer" label="MOD_IMPRINTER_SPACER_3" />
            </fieldset>

            <!-- Extra Tab -->
            <fieldset name="extra">
                <field name="microformat2" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="TPL_CLIFFLEX_FIELD_MICROFORMAT_LABEL" description="TPL_CLIFFLEX_FIELD_MICROFORMAT_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>

                <field type="spacer" hr="true" />

                <field name="imprintercss" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="TPL_CLIFFLEX_FIELD_IMPRINTERCSS_LABEL" description="TPL_CLIFFLEX_FIELD_IMPRINTERCSS_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>
                <field type="spacer" name="geoinfo" class="text"
                       label="MOD_IMPRINTER_IMPRINTERCSSCODE_LABEL" description="MOD_IMPRINTER_IMPRINTERCSSCODE_DESC" />
            </fieldset>

            <!-- Extended Tab -->
            <fieldset name="advanced">
                <field name="layout" type="modulelayout"
                       label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field name="moduleclass_sfx" type="text"
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field name="cache" type="list" default="1"
                       label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <!--
                <field name="cache" type="hidden" value="0" />
                -->

                <field name="cache_time" type="text" default="900"
                       label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <!--<server type="collection">http://example.com/list.xml</server>-->
        <server type="extension" name="Imprinter" priority="1">https://github.com/msritzenhoff/mod_imprinter/blob/master/mod_imprinter.xml</server>
    </updateservers>

</extension>
