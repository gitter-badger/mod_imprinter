            <!-- Contact Tab -->
            <fieldset name="contact">

                <field name="postofficeboxaddress" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_POSTOFFICEBOXADDRESS_LABEL" description="MOD_IMPRINTER_FIELD_POSTOFFICEBOXADDRESS_DESC"
                       filter="string" />
                <field name="postofficeboxnumber" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_POSTOFFICEBOXNUMBER_LABEL" description="MOD_IMPRINTER_FIELD_POSTOFFICEBOXNUMBER_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="telephone" type="text" validate="tel" default=""
                       label="MOD_IMPRINTER_FIELD_TELEPHONE_LABEL" description="MOD_IMPRINTER_FIELD_TELEPHONE_DESC"
                       filter="string" />
                <field name="telephonecall" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="MOD_IMPRINTER_FIELD_TELEPHONECALL_LABEL" description="MOD_IMPRINTER_FIELD_TELEPHONECALL_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>

                <field type="spacer" hr="true" />

                <field name="telefax" type="text" validate="tel" default=""
                       label="MOD_IMPRINTER_FIELD_TELEFAX_LABEL" description="MOD_IMPRINTER_FIELD_TELEFAX_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="mobilephone" type="text" validate="tel" default=""
                       label="MOD_IMPRINTER_FIELD_MOBILEPHONE_LABEL" description="MOD_IMPRINTER_FIELD_MOBILEPHONE_DESC"
                       filter="string" />
                <field name="mobilephonecall" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="MOD_IMPRINTER_FIELD_MOBILEPHONECALL_LABEL" description="MOD_IMPRINTER_FIELD_MOBILEPHONECALL_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>
                <field name="mobilephonesms" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="MOD_IMPRINTER_FIELD_MOBILEPHONESMS_LABEL" description="MOD_IMPRINTER_FIELD_MOBILEPHONESMS_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>

                <field type="spacer" hr="true" />

                <field name="email" type="text" class="required validate-email" required="true" validate="email" scheme="mailto" default=""
                       label="MOD_IMPRINTER_FIELD_EMAIL_LABEL" description="MOD_IMPRINTER_FIELD_EMAIL_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="url" type="text" class="validate-url" validate="url" scheme="http,https" default="http://"
                       label="MOD_IMPRINTER_FIELD_URL_LABEL" description="MOD_IMPRINTER_FIELD_URL_DESC"
                       filter="string" />

                <field name="spacer_name_5" type="spacer" label="MOD_IMPRINTER_SPACER_5" />
            </fieldset>

            <!-- Additional Tab -->
            <fieldset name="additional">
                <field name="accessory" type="editor" buttons="true" width="409" filter="JComponentHelper::filterText"
                       label="MOD_IMPRINTER_FIELD_EDITOR_LABEL" />

                <field name="spacer_name_6" type="spacer" label="MOD_IMPRINTER_SPACER_6" />
            </fieldset>

            <!-- Extra Tab -->
            <fieldset name="extra">
                <field name="microformat2" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="TPL_CLIFFLEX_FIELD_MICROFORMAT_LABEL" description="TPL_CLIFFLEX_FIELD_MICROFORMAT_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>

                <field type="spacer" hr="true" />

                <field name="imprintercss" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="TPL_CLIFFLEX_FIELD_IMPRINTERCSS_LABEL" description="TPL_CLIFFLEX_FIELD_IMPRINTERCSS_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>
                <field type="spacer" name="geoinfo" class="text"
                       label="MOD_IMPRINTER_IMPRINTERCSSCODE_LABEL" description="MOD_IMPRINTER_IMPRINTERCSSCODE_DESC" />

                <field type="spacer" hr="true" />

                <field type="spacer" name="developersdtest" class="text"
                       label="MOD_IMPRINTER_DEVELOPERSDTEST_LABEL" description="MOD_IMPRINTER_DEVELOPERSDTEST_DESC" />

                <field type="spacer" name="hcardconformance" class="text"
                       label="MOD_IMPRINTER_HCARDCONFORMANCE_LABEL" description="MOD_IMPRINTER_HCARDCONFORMANCE_DESC" />

                <field type="spacer" name="microformatparserpin13" class="text"
                       label="MOD_IMPRINTER_MICROFORMATPARSERPIN13_LABEL" description="MOD_IMPRINTER_MICROFORMATPARSERPIN13_DESC" />

                <field name="spacer_name_7" type="spacer" label="MOD_IMPRINTER_SPACER_7" />
            </fieldset>
        </fields>
