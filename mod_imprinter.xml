                <field name="spacer_name_1" type="spacer" label="MOD_IMPRINTER_SPACER_1" />
            </fieldset>

            <!-- Advanced Tab -->
            <fieldset name="advanced">
                <field name="layout" type="modulelayout"
                       label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field name="moduleclass_sfx" type="text" default=" imprinter"
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field name="cache" type="list" default="1"
                       label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <!--
                <field name="cache" type="hidden" value="0" />
                -->

                <field name="cache_time" type="text" default="900"
                       label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>

                <field name="spacer_name_1" type="spacer" label="MOD_IMPRINTER_SPACER_1" />
            </fieldset>

            <!-- Imprint Tab -->
            <fieldset name="organization">
                <field name="organizationname" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_ORGANIZATIONNAME_LABEL" description="MOD_IMPRINTER_FIELD_ORGANIZATIONNAME_DESC"
                       filter="string" />

                <field name="organizationdescription" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_ORGANIZATIONDESCRIPTION_LABEL" description="MOD_IMPRINTER_FIELD_ORGANIZATIONDESCRIPTION_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="startbusiness" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_BUSINESSSTART_LABEL" description="MOD_IMPRINTER_FIELD_BUSINESSSTART_DESC"
                       filter="string" />

                <field name="vatid" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_VATID_LABEL" description="MOD_IMPRINTER_FIELD_VATID_DESC"
                       filter="string" />

                <field name="spacer_name_2" type="spacer" label="MOD_IMPRINTER_SPACER_2" />
            </fieldset>

            <!-- Owner Tab -->
            <fieldset name="owner">

                <field name="gender" type="list" default="1"
                       label="MOD_IMPRINTER_FIELD_GENDER_LABEL" description="MOD_IMPRINTER_FIELD_GENDER_DESC">
                    <option value="MOD_IMPRINTER_FIELD_GENDERMALE_VALUE">MOD_IMPRINTER_FIELD_GENDERMALE</option>
                    <option value="MOD_IMPRINTER_FIELD_GENDERFEMALE_VALUE">MOD_IMPRINTER_FIELD_GENDERFEMALE</option>
                </field>

                <field name="honorificprefix" type="list" default="1"
                       label="MOD_IMPRINTER_FIELD_HONORIFICPREFIX_LABEL" description="MOD_IMPRINTER_FIELD_HONORIFICPREFIX_DESC">
                    <option value="MOD_IMPRINTER_FIELD_HPREFIXMR_VALUE">MOD_IMPRINTER_FIELD_HPREFIXMR</option>
                    <option value="MOD_IMPRINTER_FIELD_HPREFIXMRS_VALUE">MOD_IMPRINTER_FIELD_HPREFIXMRS</option>
                </field>

                <field name="honorificsuffix" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_HONORIFICSUFFIX_LABEL" description="MOD_IMPRINTER_FIELD_HONORIFICSUFFIX_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="firstname" type="text" class="required" required="true" default=""
                       label="MOD_IMPRINTER_FIELD_FIRSTNAME_LABEL" description="MOD_IMPRINTER_FIELD_FIRSTNAME_DESC"
                       filter="string" />

                <field name="secondname" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_SECONDNAME_LABEL" description="MOD_IMPRINTER_FIELD_SECONDNAME_DESC"
                       filter="string" />
                <field name="secondnameinitialbtn" type="radio" class="btn-group btn-group-yesno" default="0"
                       label="MOD_IMPRINTER_FIELD_SECONDNAMEINITIALBTN_LABEL" description="MOD_IMPRINTER_FIELD_SECONDNAMEINITIALBTN_DESC">
                    <option value="0" class="off">JNO</option>
                    <option value="1" class="on">JYES</option>
                </field>
                <field name="secondnameinitial" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_SECONDNAMEINITIAL_LABEL" description="MOD_IMPRINTER_FIELD_SECONDNAMEINITIAL_DESC"
                       filter="string" />

                <field name="lastname" type="text" class="required" required="true" default=""
                       label="MOD_IMPRINTER_FIELD_LASTNAME_LABEL" description="MOD_IMPRINTER_FIELD_LASTNAME_DESC"
                       filter="string" />

                <field name="jobtitle" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_JOBTITLE_LABEL" description="MOD_IMPRINTER_FIELD_JOBTITLE_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="authorurl" type="text" default="https://plus.google.com/"
                       label="MOD_IMPRINTER_FIELD_AUTHORURL_LABEL" description="MOD_IMPRINTER_FIELD_AUTHORURL_DESC"
                       filter="string" />

                <field type="spacer" hr="true" />

                <field name="nameurl" type="text" default="http://"
                       label="MOD_IMPRINTER_FIELD_NAMEURL_LABEL" description="MOD_IMPRINTER_FIELD_NAMEURL_DESC"
                       filter="string" />
                <field name="nameurltitle" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_NAMEURLTITLE_LABEL" description="MOD_IMPRINTER_FIELD_NAMEURLTITLE_DESC"
                       filter="string" />

                <field name="spacer_name_3" type="spacer" label="MOD_IMPRINTER_SPACER_3" />
            </fieldset>

            <!-- Location Tab -->
            <fieldset name="location">

                <field name="street" type="text" class="required" required="true" default=""
                       label="MOD_IMPRINTER_FIELD_STREET_LABEL" description="MOD_IMPRINTER_FIELD_STREET_DESC"
                       filter="string" />

                <field name="extendedaddress" type="text" default=""
                       label="MOD_IMPRINTER_FIELD_EXTENDEDADDRESS_LABEL" description="MOD_IMPRINTER_FIELD_EXTENDEDADDRESS_DESC"
                       filter="string" />

                <field name="postalcode" type="text" class="required" required="true" default=""
